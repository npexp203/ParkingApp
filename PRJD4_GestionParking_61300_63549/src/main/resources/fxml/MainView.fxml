<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="be.esi.prj.view.MainController"
            style="-fx-background-color: #FAFAFA;">

    <VBox alignment="CENTER" spacing="20" AnchorPane.topAnchor="50.0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

        <!-- Logo -->
        <ImageView fitWidth="100" fitHeight="100" preserveRatio="true">
            <image>
                <Image url="@/pFlowPark.png"/>
            </image>
        </ImageView>

        <!-- Titre -->
        <Label text="Bienvenue sur FlowPark"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #222;" />

        <!-- Boutons -->
        <VBox spacing="15" alignment="CENTER">
            <Button text="Scanner un Ticket" onAction="#goToScan"
                    style="-fx-background-color: #34A853; -fx-text-fill: white; -fx-font-size: 16px; -fx-pref-width: 220px;" />
            <Button text="Liste des VÃ©hicules" onAction="#goToVehicleList"
                    style="-fx-background-color: #34A853; -fx-text-fill: white; -fx-font-size: 16px; -fx-pref-width: 220px;" />
            <Button text="Gestion des Sorties" onAction="#goToCheckout"
                    style="-fx-background-color: #34A853; -fx-text-fill: white; -fx-font-size: 16px; -fx-pref-width: 220px;" />
            <Button text="Quitter" onAction="#exitApp"
                    style="-fx-background-color: #E53935; -fx-text-fill: white; -fx-font-size: 16px; -fx-pref-width: 220px;" />
        </VBox>
    </VBox>
</AnchorPane>
